{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "ts-node": { "experimentalSpecifierResolution": "node", "esm": true },
  "include": ["./*.js", "src/**/*.ts", "test/**/*.ts"]
}
